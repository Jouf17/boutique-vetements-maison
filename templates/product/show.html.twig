{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - fait à la main{% endblock %}

{% block content %}
<div class="example-wrapper">
    <h1>{{product.name}}</h1>
    <div class="row">
        <div class="col-md-4">
            <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
        </div>
        <div class="col-md-8">
            <strong>{{product.name}}</strong>
            <p>{{product.subtitle}}</p>
            <span>{{(product.price / 100)|number_format(2, ',', '.')}} €</span>
            <hr>
            <p>{{product.description}}</p>
            <a href="{{ path('add_to_cart', {'id' : product.id})}}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

</div>
{% endblock %}
